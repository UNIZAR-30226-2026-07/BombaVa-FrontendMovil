<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden_style"
    android:padding="6dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grid_border" />

    <RelativeLayout
        android:id="@+id/panelInfoBarco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6051937"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/btnCloseInfo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="âœ–"
            android:textColor="#FF5252"
            android:textSize="28sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/imgInfoBarco"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#FFEB3B"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtInfoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAVE TIPO X"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtInfoGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salud Estructural: 1500 HP"
                android:textColor="#FFEB3B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtInfoCeldas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celda 1: 3/3 HP..."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>